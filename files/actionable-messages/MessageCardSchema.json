{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "HttpPOSTAction": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [ "HttpPOST" ]
        },
        "name": { "type": "string" },
        "target": { "type": "string" },
        "headers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "body": { "type": "string" },
        "bodyContentType": { "type": "string" }
      },
	  "required" : ["@type","target"]
    },
    "OpenUriAction": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [ "OpenUri" ]
        },
        "name": { "type": "string" },
        "targets": {
          "type": "array",
          "items": { "type": "object" }
        }
      },
      "required" : ["@type"]
    },
    "ActionCardAction": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [ "ActionCard" ]
        },
        "name": { "type": "string" },
        "inputs": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string",
                    "enum": [ "TextInput" ]
                  },
                  "id": { "type": "string" },
                  "isMultiline": { "type": "boolean" },
                  "title": { "type": "string" },
                  "isRequired": { "type": "boolean" },
                  "maxLength": { "type": "integer" },
                  "value": { "type": "string" }
                },
                "required": [ "@type" ]
              },
              {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string",
                    "enum": [ "DateInput" ]
                  },
                  "id": { "type": "string" },
                  "isRequired": { "type": "boolean" },
                  "value": { "type": "string" },
                  "title": { "type": "string" }
                },
                "required": [ "@type" ]
              },
              {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string",
                    "enum": [ "MultichoiceInput" ]
                  },
                  "id": { "type": "string" },
                  "isRequired": { "type": "boolean" },
                  "value": { "type": "string" },
                  "title": { "type": "string" },
                  "choices": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "display": { "type": "string" },
                        "value": { "type": "string" }
                      }
                    }
                  }
                },
                "required": [ "@type" ]
              }
            ]
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/OpenUriAction" },
              { "$ref": "#/definitions/HttpPOSTAction" },
              { "$ref": "#/definitions/ActionCardAction" }
            ]
          }
        }
      },
      "required" : ["@type"]
    }
  },
  "type": "object",
  "properties": {
    "@context": { 
		"type": "string",
		"enum": ["https://schema.org/extensions"]
    },
    "@type": { 
		"type": "string",
		"enum": ["MessageCard"]
	},
    "themeColor": { "type": "string" },
    "style": {
      "type": "string",
      "enum": [ "compact", "expanded" ]
    },
    "isMultiSelect": { "type": "boolean" },
    "hideOriginalBody": { "type": "boolean" },
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "text": { "type": "string" },
    "potentialAction": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/OpenUriAction" },
          { "$ref": "#/definitions/HttpPOSTAction" },
          { "$ref": "#/definitions/ActionCardAction" }
        ]
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "activityImage": { "type": "string" },
          "activityTitle": { "type": "string" },
          "activitySubtitle": { "type": "string" },
          "activityText": { "type": "string" },
          "text": { "type": "string" },
          "facts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "value": { "type": "string" }
              }
            }
          },
          "heroImage": {
            "type": "object",
            "properties": {
                "image": { "type": "string" },
                "title": {"type": "string"}
              }
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "image": { "type": "string" },
                "title": {"type": "string"}
              }
            }
          },
          "potentialAction": {
            "type": "array",
            "items": {
              "anyOf": [
                { "$ref": "#/definitions/OpenUriAction" },
                { "$ref": "#/definitions/HttpPOSTAction" },
                { "$ref": "#/definitions/ActionCardAction" }
              ]
            }
          }
        }
      }
    }
  },
  "required" : ["@context", "@type", "summary"],
  "additionalProperties": false
}
